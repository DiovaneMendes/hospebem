case $1 in

  # Cria o container com a imagem do postgres
  run)
    docker run --name hospebem-db -p 5432:5432 -e POSTGRES_PASSWORD=hospebempass -d postgres
  ;;

  # Se o banco estiver em estado de 'stop', utilize este comando (Nao e uma boa pratica)
  start)
    docker container start hospebem-db 2> /dev/null || ./banco run
  ;;

  # Cria um novo banco dentro do container docker
  create)
    docker exec -it hospebem-db psql -U postgres -c 'CREATE DATABASE hospebemdb'
  ;;

  # Abre console do banco no terminal
  console)
    docker exec -it hospebem-db psql -U postgres -d hospebemdb
  ;;

  # Parar o container que o banco est√° rodando
  stop)
     docker stop hospebem-db
  ;;

  remove)
    docker rm hospebem-db
  ;;

  *)
    echo "nope"
  ;;
esac

